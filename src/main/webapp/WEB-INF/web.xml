<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.LoginServlet</servlet-class>
    </servlet>
    
    <!-- Logout Servlet -->    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.LogoutServlet</servlet-class>
    </servlet>
    
   <!-- Signup Servlet -->    
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.SignupServlet</servlet-class>
    </servlet>
    
   <!-- Create Game Servlet -->    
    <servlet>
        <servlet-name>CreateGameServlet</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.CreateGameServlet</servlet-class>
    </servlet>
    
    <!-- Fetch Game Servlet -->    
    <servlet>
        <servlet-name>FetchAllGames</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.FetchAllGames</servlet-class>
    </servlet>
    
    <!-- Edit Game Servlet -->    
    <servlet>
        <servlet-name>EditGame</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.EditGame</servlet-class>
    </servlet>
    
    <!-- Bet Game Servlet -->    
    <servlet>
        <servlet-name>BetGame</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.BetGame</servlet-class>
    </servlet>
    
     <!-- Update Game Servlet -->    
    <servlet>
        <servlet-name>UpdateGame</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.UpdateGame</servlet-class>
    </servlet>
    
    <!-- Game Over Servlet -->    
    <servlet>
        <servlet-name>GameOver</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.GameOver</servlet-class>
    </servlet>
    
     <!-- Update Bet Servlet -->    
    <servlet>
        <servlet-name>UpdateBet</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.UpdateBet</servlet-class>
    </servlet>
     <!-- Fetch User Rank Servlet -->    
    <servlet>
        <servlet-name>UserRanks</servlet-name>
        <servlet-class>com.fussballtippspiel.bl.UserRanks</servlet-class>
    </servlet>
    
    <!-- Login Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Signup Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <!-- Create Game Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>CreateGameServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    
    <!-- Fetch Game Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>FetchAllGames</servlet-name>
        <url-pattern>/all-games</url-pattern>
    </servlet-mapping>
    
     <!--Edit Game Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>EditGame</servlet-name>
        <url-pattern>/edit-game</url-pattern>
    </servlet-mapping>
    
    <!--Bet Game Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>BetGame</servlet-name>
        <url-pattern>/bet-game</url-pattern>
    </servlet-mapping>
    
     <!--Update Game Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>UpdateGame</servlet-name>
        <url-pattern>/update-game</url-pattern>
    </servlet-mapping>
    
     <!--Game Over Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>GameOver</servlet-name>
        <url-pattern>/game-over</url-pattern>
    </servlet-mapping>
    
     <!--Update Bet Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>UpdateBet</servlet-name>
        <url-pattern>/update-bet</url-pattern>
    </servlet-mapping>
    
     <!--User Ranks Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>UserRanks</servlet-name>
        <url-pattern>/user-ranks</url-pattern>
    </servlet-mapping>
</web-app>
